{
    "name": "@nodecfdi/cfdiutils-common",
    "version": "1.2.3",
    "description": "Librería usada para contener las estructuras de datos comunes, y utilerías o funciones de ayuda común.",
    "keywords": [
        "common",
        "cfdi",
        "estructura",
        "struct",
        "xml"
    ],
    "private": false,
    "author": "OcelotlStudio <contacto@ocelotlstudio.com>",
    "license": "MIT",
    "type": "module",
    "main": "dist/cfdiutils-common.js",
    "module": "dist/cfdiutils-common.cjs",
    "unpkg": "dist/cfdiutils-common.global.js",
    "browser": "dist/cfdiutils-common.global.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist"
    ],
    "scripts": {
        "preinstall": "npx only-allow pnpm",
        "prepare": "is-ci || husky install",
        "lint": "eslint --fix --ext .js,.ts .",
        "lint:check": "eslint --ext .js,.ts .",
        "format": "prettier --write \"**/*.{js,ts,json}\"",
        "type:check": "api-extractor run",
        "test": "vitest",
        "test:run": "vitest run",
        "test:coverage": "vitest run --coverage",
        "build": "pnpm prebuild && tsup",
        "prebuild": "rimraf dist",
        "gen:docs": "pnpm type:check && rimraf docs && typedoc --options typedoc.json",
        "release": "pnpm run build && pnpm changeset publish"
    },
    "repository": "https://github.com/nodecfdi/cfdiutils-common",
    "bugs": {
        "url": "https://github.com/nodecfdi/cfdiutils-common/issues"
    },
    "homepage": "https://github.com/nodecfdi/cfdiutils-common",
    "devDependencies": {
        "@changesets/cli": "^2.26.0",
        "@commitlint/cli": "^17.4.1",
        "@microsoft/api-extractor": "^7.33.7",
        "@nrsk/config-conventional": "^1.0.0",
        "@types/is-ci": "^3.0.0",
        "@types/node": "^18.11.18",
        "@typescript-eslint/eslint-plugin": "^5.48.1",
        "@typescript-eslint/parser": "^5.48.1",
        "@vitest/coverage-istanbul": "^0.29.0",
        "@xmldom/xmldom": "^0.8.6",
        "eslint": "^8.31.0",
        "eslint-config-prettier": "^8.6.0",
        "eslint-config-xo": "^0.43.1",
        "eslint-config-xo-typescript": "^0.56.0",
        "eslint-plugin-tsdoc": "^0.2.17",
        "eslint-plugin-unicorn": "^45.0.2",
        "husky": "^8.0.3",
        "is-ci": "^3.0.1",
        "jest-xml-matcher": "^1.2.0",
        "jsdom": "^21.0.0",
        "lint-staged": "^13.1.0",
        "prettier": "^2.8.2",
        "rimraf": "^4.0.0",
        "tsup": "^6.5.0",
        "tsx": "^3.12.2",
        "typedoc": "^0.23.24",
        "typedoc-theme-hierarchy": "^3.0.2",
        "typescript": "^4.9.4",
        "vite": "^4.0.4",
        "vitest": "^0.29.0"
    },
    "commitlint": {
        "extends": [
            "@nrsk/config-conventional"
        ]
    },
    "lint-staged": {
        "*.{js,ts,json}": [
            "prettier --write"
        ],
        "*.{js,ts}": [
            "eslint --fix"
        ]
    },
    "engines": {
        "node": ">=14.16.0"
    },
    "browserslist": [
        "defaults",
        "not IE 11"
    ]
}
